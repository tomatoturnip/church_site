<!--sign-up modal-->

<div id="signupmodal" class="modal fade in" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center" style="color:black">Sign up</h1>
      </div>
      <div class="modal-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%#= devise.error_messages! %>
        <form class="form col-md-12 center-block">
          <div class="form-group">
            <%= f.input_field :email, class: "form-control input-lg", label: false, type: 'email', placeholder: 'Email', required: false %>
          </div>
          <div class="form-group">
            <%= f.input_field :password, label: false, type: 'password', required: false, placeholder: 'Password', class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.input_field :password_confirmation, label: false, type: 'password', required: false, placeholder: 'Password Confirmation', class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "Submit", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
        </form>
      </div>`
      <div class="modal-footer">
        <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
      </div>

    </div>
  </div>
</div>
