
<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">PCIC</h1>
                    <p class="intro-text">Peninsula Church in Christ<br><em class="verse">Romans 12:10<br>"Be devoted to one another in brotherly love; give preference to one another in honor."</em></p>
                    <a href="#about" class="btn btn-circle page-scroll">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section id="about" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>About PCIC</h2>
            <p>PCIC is ...</p>
        </div>
    </div>
</section>

<!-- Download Section -->
<section id="messages" class="content-section text-center">
    <div class="download-section">
        <div class="container">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Never miss a message</h2>
                <p>You can listen to messages on the Messages page</p>
                <a href="http://startbootstrap.com/template-overviews/grayscale/" class="btn btn-default btn-lg">Visit Messages</a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Contact PCIC</h2>
            <p>Feel free to email us at </p>
            <p><a href="mailto:foo@bar.com">foo@bar.com</a>
            </p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="login" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <p><%= link_to "Sign up", "#signupmodal", "data-toggle" => "modal" %> or <%= link_to "Login", "#loginmodal", "data-toggle" => "modal" %> if you already have an account</p>
            <p>or sign in using Facebook or Google</p>
            <ul class="list-inline banner-social-buttons">
                <li>
                    <a href="https://facebook.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                </li>
                <li>
                    <a href="https://plus.google.com/+Startbootstrap/posts" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
                </li>
            </ul>
        </div>
    </div>
</section>

